<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    Typography styles-->

    <style name="typographyBody1">
        <item name="font">@font/seoulmed</item>
        <item name="fontFamily">@font/seoulmed</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="typographyBody2">
        <item name="font">@font/seoulmed</item>
        <item name="fontFamily">@font/seoulmed</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.25</item>
    </style>

    <style name="typographyButton">
        <item name="font">@font/seoulbold</item>
        <item name="fontFamily">@font/seoulbold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="typographyCaption">
        <item name="font">@font/seoulmed</item>
        <item name="fontFamily">@font/seoulmed</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="typographyHeadline1">
        <item name="font">@font/seoullight</item>
        <item name="fontFamily">@font/seoullight</item>
        <item name="android:textSize">96sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline2">
        <item name="font">@font/seoullight</item>
        <item name="fontFamily">@font/seoullight</item>
        <item name="android:textSize">60sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline3">
        <item name="font">@font/seoulmed</item>
        <item name="fontFamily">@font/seoulmed</item>
        <item name="android:textSize">48sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline4">
        <item name="font">@font/seoulmed</item>
        <item name="fontFamily">@font/seoulmed</item>
        <item name="android:textSize">34sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="typographyHeadline5">
        <item name="font">@font/seoulmed</item>
        <item name="fontFamily">@font/seoulbold</item>
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline6">
        <item name="font">@font/seoulbold</item>
        <item name="fontFamily">@font/seoulbold</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="typographyOverline">
        <item name="font">@font/seoulmed</item>
        <item name="fontFamily">@font/seoulmed</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">1.5</item>
    </style>

    <style name="typographySubtitle1">
        <item name="font">@font/seoulmed</item>
        <item name="fontFamily">@font/seoulmed</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="typographySubtitle2">
        <item name="font">@font/seoulbold</item>
        <item name="fontFamily">@font/seoulbold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

<!--    sttributes stylings-->


    <style name="recyclerElementCardOutlined" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>


    <style name="AvatarTextStylings">
        <item name= "android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/typographyButton</item>
    </style>

    <style name="TitleNameTextStylings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textAppearance">@style/typographyHeadline6</item>
    </style>

    <style name="TitleEmailTextStylings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textAppearance">@style/typographyCaption</item>
    </style>

    <style name="SearchInputLayoutStylings" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:hint">@string/search</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_round_search_24</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

</resources>