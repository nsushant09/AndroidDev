<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RetroFit" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_yellow</item>
        <item name="colorPrimaryVariant">@color/light_orange</item>
        <item name="colorOnPrimary">@color/secondary_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/secondary_white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="background">@color/secondary_white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorSurface">@color/secondary_white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/secondary_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textAppearanceHeadline1">@style/typographyHeadline1</item>
        <item name="textAppearanceHeadline2">@style/typographyHeadline2</item>
        <item name="textAppearanceHeadline3">@style/typographyHeadline3</item>
        <item name="textAppearanceHeadline4">@style/typographyHeadline4</item>
        <item name="textAppearanceHeadline5">@style/typographyHeadline5</item>
        <item name="textAppearanceHeadline6">@style/typographyHeadline6</item>

        <item name="textAppearanceSubtitle1">@style/typographySubtitle1</item>
        <item name="textAppearanceSubtitle2">@style/typographySubtitle2</item>

        <item name="textAppearanceBody1">@style/typographyBody1</item>
        <item name="textAppearanceBody2">@style/typographyBody2</item>

        <item name="textAppearanceCaption">@style/typographyCaption</item>
        <item name="textAppearanceOverline">@style/typographyOverline</item>
        <item name="textAppearanceButton">@style/typographyButton</item>

        <item name="recyclerElement_cardStyle">@style/recyclerElementCardOutlined</item>
        <item name="avatarTextViewStyle">@style/AvatarTextStylings</item>
        <item name="titleEmailTextStyle">@style/TitleEmailTextStylings</item>
        <item name="searchInputLayout">@style/SearchInputLayoutStylings</item>
    </style>
</resources>