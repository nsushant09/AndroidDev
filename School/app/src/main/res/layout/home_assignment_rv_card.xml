<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:gravity="center"
    android:background="@drawable/home_assign_card"
    android:layout_marginEnd="16dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:paddingHorizontal="5dp"
    android:id="@+id/home_assign_rv_card"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/home_assign_rv_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongleregular"
            android:textSize="40sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/home_assign_rv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesansproregular"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>